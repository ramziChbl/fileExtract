set nocompatible
set number
set autoindent
set shiftwidth=4
set smartindent
set smarttab
#set softtabstop=4
set nowrap
colorscheme Tomorrow-Night-Bright

inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
inoremap {<CR> {<CR>}<ESC>O
inoremap {;<CR> {<CR>};<ESC>O
